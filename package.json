{
  "name": "godot-hub",
  "version": "1.0.0",
  "description": "A hub for your Godot needs",
  "main": "main.js",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/transform-runtime"
      ]
    ]
  },
  "jest": {
    "automock": false,
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ]
  },
  "standard": {
    "env": ["jest"],
    "globals": [
      "fetch"
    ]
  },
  "scripts": {
    "prestart": "mkdir -p dist & webpack --config webpack.dev.js",
    "start": "electron .",
    "test": "jest --verbose",
    "fmt": "standard --fix",
    "lint": "eslint --init" 
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/godot-hub/godot-hub.git"
  },
  "keywords": [
    "godot-manager",
    "version-manager",
    "project-manager"
  ],
  "author": "Mrwan Ashraf & Johnathan Mueller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godot-hub/godot-hub/issues"
  },
  "homepage": "https://github.com/godot-hub/godot-hub#readme",
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "electron": "^6.0.11",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.0",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "standard": "^14.3.1",
    "style-loader": "^1.0.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  }
}
